{
	"name": "@lytejs/ws",
	"version": "0.0.0-development",
	"description": "Websockets on steroid",
	"module": "dist/node/index.js",
	"browser": "dist/browser/index.js",
	"types": "dist/types/index.d.ts",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"prepare": "husky install",
		"build": "npm run build:types && npm run build:code",
		"build:code": " cross-env NODE_ENV=production rollup -c",
		"build:types": "tsc --watch --project ./tsconfig.types.json && replace 'import type' 'import' ./types -r --silent && replace 'export type' 'export' ./types -r --silent",
		"build:code:watch": "rollup -c -w",
		"build:types:watch": "tsc --watch --project ./tsconfig.types.json && replace 'import type' 'import' ./types -r --silent && replace 'export type' 'export' ./types -r --silent",
		"build:watch": "run-p build-code:watch build-types:watch"
	},
	"author": "bugwheels94",
	"license": "ISC",
	"devDependencies": {
		"@babel/plugin-proposal-decorators": "^7.17.9",
		"@babel/preset-env": "^7.16.11",
		"@babel/preset-typescript": "^7.16.7",
		"@rollup/plugin-babel": "^5.3.1",
		"@rollup/plugin-commonjs": "^21.0.2",
		"@rollup/plugin-node-resolve": "^13.2.1",
		"@types/ws": "^8.5.3",
		"cross-env": "^7.0.3",
		"fast-glob": "^3.2.11",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.7",
		"npm-run-all": "^4.1.5",
		"prettier": "2.6.0",
		"rollup": "^2.70.2",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"semantic-release": "^19.0.2"
	},
	"prettier": {
		"singleQuote": true,
		"printWidth": 120,
		"useTabs": true
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	},
	"dependencies": {
		"@babel/runtime": "^7.17.9",
		"isomorphic-ws": "^4.0.1"
	}
}
